<view class='gz'>
  <block wx:for="{{arr}}">
    <view class='block' data-index='{{index}}'>
      <view class='block_l'>
        <image class='block_l_img' src="{{item.photo}}"></image>
      </view>
      <view class='block_c'>
        <text class='name'>{{item.name}}</text>
        <text class='bText'>{{item.content}}</text>
      </view>
      <view class='block_r'>
        <text class='time'>{{item.time}}</text>
      </view>
    </view>
  </block>
</view>