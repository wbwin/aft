page{
  background-color: #efefef;
  font-size: 31rpx;
}

.listBox{
  background-color: #fff;
  padding: 18rpx;
  margin-bottom: 30rpx;
}
.list-item{
  border: solid 5rpx #B8B8B8;
  display: flex;
  flex-direction: column;
  border-radius: 5rpx;
    padding: 30rpx 20rpx 18rpx;
}
.list-item>view{
border-bottom: solid 1rpx #E8E8E8;
line-height: 44rpx;
padding:18rpx 20rpx;
color: #686868;
}
.list-item .itemlr{
 display: flex;
 flex-direction: row;
 justify-content: space-between;
}
.list-item .items{
   display: flex;
 flex-direction: row;
}
.list-item .name{
  width: 130rpx;
  color: #000;
  flex: none;
}

/*无内容  */
.notContent{
  width: 100%;
  height: 100%;
  min-height: 1000rpx;
  display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
 color: #606060;
}
.notContent image{
 width: 200rpx;
 height: 200rpx;
 margin-bottom: 30rpx;

}