.header{
  position: relative;
  width: 100%;
  height: 420rpx;
  overflow: hidden;
}
.header-bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  height: 420rpx;
}

.header button{
  position: absolute;
  bottom: 70rpx;
  left: 30%;
  width: 40%;
 background-color: #53beb7;
 color: #fff;
 font-size: 32rpx;
 border-radius: 100rpx;
}


/*开店小助手  */
.aideBox{
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.aideBox .title{
  padding: 50rpx 0 20rpx;
  font-size: 38rpx;
  text-align: center;
}

.explain{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #A8A8A8;
  line-height: 40rpx;
  border-bottom: solid 1rpx #E0E0E0;
  padding: 32rpx 3rpx;
}
.explain .name{
  color: #2a2a2a;
  font-size: 30rpx;
  padding-bottom: 12rpx;
}