.block{
  padding-top: 2%;
  padding-bottom: 2%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}

.block_l{
  flex: 2;
  display: flex;  
  align-items: center;
  position: relative;
}
.block_c{
  flex: 10;
  font-size:28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.block_r{
  flex: 3;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-right: 3%;
}

