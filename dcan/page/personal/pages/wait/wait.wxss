page{
  font-size: 30rpx;
}
.tops{
  background-color:rgba(255,185,109,0.1) ;
  color: #f8a142;
  display: flex;
  flex-direction: row;
  line-height: 45rpx;
  padding: 14rpx 40rpx;
}
.tops image{
  width: 60rpx;
  height: 60rpx;
}
.tops .words{
  display: flex;
  flex-direction: column;
  margin-top: 8rpx;
  margin-left: 8rpx;
}
/* .tops .words text:last-child{
  font-size: 26rpx;
  color: #e69f53;
} */
.tops .words .first text:last-child{
  font-size: 26rpx;
  display: block;
}
.tops .words .step text:last-child{
  font-size: 26rpx;
  color: #e69f53;
  display: block;
}

.content{
  padding:0 40rpx;
}
.shop{
  display: flex;
  flex-direction: row;
  margin: 50rpx 0;
}
.shop image{
  width: 150rpx;
  height: 150rpx;
  flex: none;
 margin-right: 20rpx;
}

.shop-info{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #909090;
  line-height: 36rpx;
}
.shop-info .title{
  font-size: 30rpx;
  color: #000;
  margin-bottom: 10rpx;
}
.phone{
  color: #0000CD;
}

.info-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: solid 1rpx #dedede;
  padding: 40rpx 0;
}

.info-item .more{
  color:#909090;
  font-weight: 700;
}  

.info-item .more text{
  font-weight: 400;
font-size: 28rpx;
}

.nextBut{
 background-color: #53beb7;
 color: #fff;
 width: 90%;
  margin: 2% auto; 
}

.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left: 0;
  background:rgba(0,0,0,0.4);
  }

.modal-body{
  width: 90%;
  background-color: #fff;
  margin: 20% auto;
  border-radius: 12rpx;
}

.modal-content{
  padding:8%;
}
.modal-content input{
	border: 1rpx solid #999;
	border-radius: 10rpx;
	padding: 3% 4%;
	margin-bottom: 6%;
}
.knowBtn{
	color: #fff;
	background: #53beb7;
}
.modal-content .fenxiang{
  width: 100%;
  height: 40%;
}
.placClass {
  color: #b5b5b5 !important;
  font-size: 28rpx;
}
.zuxiao{
	width: 90%;
	background-color:red;
	color:#ddd;
  margin: 2% auto;	
}
.loadingBack {
  width: 750rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.msgBox{
  width: 700rpx;
  height: auto;
  background-color: #f8f8f8;
  border-width: 1px;
  border-color: #999;
  border-style: solid;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
}
.pwBoxTitle{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
}
.msgText{
  width: 640rpx;
  text-align: left;
  margin-top: 20rpx;
  display: block;
  font-size: 26rpx;
}
.btn {
  width: 600rpx;
  align-items: center;
  justify-items: center;
  margin-top: 30rpx;
  background-color: #53beb7;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 10rpx;
  text-align: center;
}
.failBtn {
  color: #fff;
}
.btn:active{
  background-color: #57aba5;
}
.formStyle button {
  margin-top: 50rpx;
}