.stamp {width: 100%;height: 198rpx;position: relative;overflow: hidden;display: flex;}
.stamp:before {content: '';position: absolute;top:0;bottom:0;left:20rpx;right:20rpx;z-index: -1;}
.stamp:after {content: '';position: absolute;left: 20rpx;top: 20rpx;right: 20rpx;bottom: 20rpx;box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.5);z-index: -2;}
.stamp i{position:absolute;left:42%;top:68rpx;height:200rpx;width:600rpx;background-color:rgba(255,255,255,.15);transform:rotate(-30deg);}
.stamp .par{padding: 3%;flex: 7;border-right:4rpx dashed rgba(255,255,255,.3);text-align: left;}
.stamp .par p{font-size:32rpx;color:#fff;}
.stamp .par span{font-size: 50rpx;color:#fff;margin-right: 10rpx;}
.stamp .par .sign{font-size: 28rpx;}
.stamp .par sub{font-size:32rpx;position: relative;top:-10rpx;color:rgba(255,255,255,.8);}
.stamp .copy{margin:3%;flex: 3;font-size: 28rpx;color:#fff;text-align: center;}

.stamp01{background: #F39B00;background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 10rpx, #F39B00 10rpx);background-size:32rpx 32rpx;background-position: 18rpx 6rpx;margin-top: 3%;}
.stamp01:before{background-color:#F39B00;}

.stamp02{background: #D24161;background: radial-gradient(transparent 0, transparent 10rpx, #D24161 10rpx);background-size: 32rpx 32rpx;background-position: 18rpx 6rpx;margin-bottom: 3%;}
.stamp02:before{background-color:#D24161;}

