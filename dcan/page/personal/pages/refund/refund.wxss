}
.explainBox {
  font-size: 30rpx;
  width: 100%;
  height: 190rpx;
  border: 2rpx solid #dedede;
}
.explain{
  width: 94%;
  height: 150rpx;
  padding: 3%;
}
.but{
  color: #fff;
