}

/*弹出内容*/
.back1{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: black;
  opacity: 0.5;
  overflow: hidden;
  z-index: 999;
  margin: 0;
  padding: 0;
}

.box1{
  font-size: 35rpx;
  line-height: 50rpx;
  width: 400rpx;
  height: 180rpx;
  padding-top: 50rpx;
  padding-left: 50rpx;
  background: #fff;
  border-radius: 15rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -125rpx 0rpx 0rpx -225rpx; 
  z-index: 1000;
  display: flex;
  flex-direction: column;
}
.box1-word{
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  align-items: center;
}
