.header{
   width: 100%;
  color: #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.header-bg{
  width: 100%;
}

/*  */
.list-item{
 font-size: 30rpx;
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: space-between;
 width: 80%;
 margin: 0 auto;
 border-bottom: 1rpx solid #E0E0E0;
 padding: 20rpx 12rpx;
}

.getVerif{
width: 200rpx;
height: 60rpx;
border:none;
background-color: #F0F0F0;
color: #888888;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
border-radius: 100rpx;
font-size: 27rpx;
}
.getVerif.active{
 background-color: #53beb7;
 color: #fff;
}


.butSure{
  background-color:#53beb7;
  width: 80%;
  font-size: 30rpx;
  margin-top: 50rpx;
  color: #fff; 
  border-radius: 100rpx;
 opacity: 0.8;
}
.read{
  margin-top: 3%;
}

.read image{
  margin-left: 8%;
  vertical-align: middle;
}
.protocolRadio {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.read text{
  text-align: center;
  margin-left: 1%;
  font-size: 28rpx;
}
.read text:nth-child(3){
  color: #53beb7;
}