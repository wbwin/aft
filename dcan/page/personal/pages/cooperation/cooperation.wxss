/*查看示例图片  */

.exampleBox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.example {
  width: 88%;
  background-color: #fff;
  border-radius: 20rpx;
  height: 800rpx;
  overflow: hidden;
  position: relative;
  margin-top: -10%;

}

.example image {
  width: 100%;
  height: 450rpx;
}

.example .words {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  color: #b0b0b0;
    font-size: 28rpx;
  line-height: 50rpx;
}

.example .words .title {
  font-size: 42rpx;
 line-height: 60rpx;
  margin-bottom: 28rpx;
  color: #2a2a2a;
  text-align: center;
}

.close-example {
  color: #fff;
  position: absolute;
  bottom: 7%;
  left: 50%;
  width: 80rpx;
  height: 80rpx;
  font-size: 42rpx;
  overflow: hidden;
  font-weight: 700;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-radius: 50%;
  border: solid 2rpx #fff;
  transform: translateX(-50%);
}
