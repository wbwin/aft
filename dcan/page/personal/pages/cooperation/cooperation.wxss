/*城市选择器*/

.container {
  display: block;
}

.citypickers {
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0px;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.citybody {
  position: fixed;
    z-index: 999;
  bottom: 0px;
  background-color: #fff;
}

.cityheader {
  position: absolute;
  top: 0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2fb42e;
}
.pickers{
