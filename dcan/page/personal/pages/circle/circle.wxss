.jiayou {
    position: fixed;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    text-align: center;
    justify-content: center;
    background-color: #53beb7;
    color: #fff;
    font-size: 28rpx;
    bottom: 150rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
}
