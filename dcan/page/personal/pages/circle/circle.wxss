.my {
    background-color: #53beb7;
    color: #fff;
}

.myinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    line-height: 60rpx;
}

.myuserPhoto {
    margin-top: 10%;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.fens {
    color: #f7f8f7;
    font-size: 30rpx;
}

.entire {
    padding: 3%;
}

.message {
    display: flex;
    padding: 2% 0;
    border-bottom: 1px solid #ddd;
}

.img {
    width: 80rpx;
    height: 80rpx;
}

.img image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.content {
    width: 85%;
    margin-left: 2%;
}

.name {
    color: #6b8db4;
    font-size: 30rpx;
    line-height: 60rpx;
}

.title {
    font-size: 30rpx;
    line-height:45rpx;
}

.images {
    position: relative;
}

.images image {
    width: 180rpx;
    height: 180rpx;
}

.bf {
    position: absolute;
    width: 80rpx;
    height: 76rpx;
    top: 30%;
    left: 25%;
}

.images image:nth-child(2) {
    margin-left: 2.5%;
}

.images image:nth-child(3) {
    margin-left: 2.5%;
}

.time {
    display: flex;
    padding-bottom: 2%;
    align-items: center;
    justify-content: space-between;
}

.time text {
    font-size: 26rpx;
    color: #888;
    line-height: 1.5555555600000004;
    padding-top: 2%;
    padding-bottom: 2%;
}

.tab {
    position: absolute;
    width: 0;
    height: 0;
    border-left: 18rpx solid transparent;
    border-right: 18rpx solid transparent;
    border-bottom: 19rpx solid #ddd;
    bottom: 0;
    left: 3%;
}

.use {
    display: flex;
    flex: auto;
    font-size: 26rpx;
}

.z {
    flex: 1;
    color: #888;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}

.z image {
    width: 40rpx;
    height: 40rpx;
}

.z view {
    line-height: 2.5;
    margin-left: 3%;
}

.p {
    flex: 0.5;
    color: #888;
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}

.p image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 8%;
}

.p view {
    line-height: 2.5;
    margin-left: 3%;
}

button::after {
    border: 0;
}

.button {
    font-size: 30rpx !important;
    padding-left: 0px !important;
    padding-right: 0px !important;
    margin-right: auto !important;
    margin-left: 0px !important;
    line-height: 1.5555555600000004 !important;
    background-color: #fff !important;
    color: #888;
}

.box {
    font-size: 30rpx;
    background-color: #f8f8f8;
    padding: 2%;
    position: relative;
}

.box text:nth-child(1) {
    color: #6b8db4;
    font-size:26rpx;
}

.option {
    width: 30%;
    position: absolute;
    z-index: 999;
    background-color: #fff;
    align-content: center;
    text-align: center;
    left: 55%;
}

.option view {
    margin-top: 8%;
}

.like {
    width: 98%;
    margin-left: 2%;
    background-color: #ddd;
    border-bottom: 1px solid #000;
}

.like image {
    width: 15px;
    height: 15px;
    margin-top: 3%;
}

.like text {
    margin-left: 2%;
    font-size: 30rpx;
}

/* 评论框 */

.input_null {
    color: #c9c9c9;
}

.release {
    display: flex;
    align-items: flex-end; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #f7f8f7;
    font-size: 28rpx;
    z-index: 999;
}

.release .text {
    width: 604rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color: #fff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #fff;
    border-radius: 4rpx;
}

.release .submit {
    width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    color: #6c0;
}

