page{
  font-size: 30rpx;
}

.content{
  position: relative;
  display: flex;
  flex-direction: column;
	padding: 3% 3% 0 3%;
}
.contentTitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:0 4%;
}
.topImg{
  width: 120rpx;
  height: 120rpx;
  box-sizing: border-box;
 border-radius:30rpx;
}
.healthy{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 20rpx;
}

/*星星  */
.starsBox {
  position: relative;
  color: #e0e0e0 !important;
  font-size: 40rpx;
}

.yellow {
  /* color: #ffcc01; */
  color: #53beb7;
}

.starsBox txt {
  margin-right: 2rpx;
}

.yellowBox {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}


/*图表  */
.stepBox{
  background: -webkit-linear-gradient(left, #18bb84 ,#1598a0);
  width: 100%;
  border-radius: 10rpx;
}
.stepWord{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  font-weight: 700;
  padding: 10rpx 30rpx 5rpx;
  border-bottom: solid 1px #40bdb0;
  font-size: 30rpx;

}
.stepWord .numb{
  font-size: 50rpx;
}
.canvasBox{
  width: 100%;
  height: 320rpx;
}

canvas {
  height: 100%;
  margin: 0 auto;
   color: #fff;
}

/*当天订单  */
.follow {
  display: flex;
  flex-direction: column;
	padding-bottom: 2%
}
.cal image{
	width: 35rpx;
	height: 35rpx;
}
.cal{
 background-color: #53beb7;
 padding: 2% 3%;
 font-size: 30rpx;
 color: #787878;
 display: flex;
 align-items: center;
 border-bottom: solid 1rpx #D8D8D8;
}
.cal image{
	border-radius: 10rpx;
}
.allCalorie{
	flex: 1;
	font-weight:700;
  font-size:40rpx;
	color:#53beb7;
	text-align: right
}
.follow .order{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	padding:2% 3%;
	border-bottom: solid 1rpx #D8D8D8;
}
.img{
	flex: 0.6
}
.follow .order .goodImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
}
.follow .order .name{
  flex: 2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.follow .order .numbs{
	flex: 0.8;
  color: #53beb7;
  font-weight: 700;
  font-size: 40rpx;
	text-align: right;
	line-height:25rpx;
}

.suggest{
 margin-top: 50rpx;
 padding:0 5%;
 font-weight: 32rpx;
 text-align: right;
margin-bottom: 50rpx;
}
.suggest .word{
    font-weight: 700;
  color: #53beb7;
  font-size: 36rpx;
}
.breakfast,.lunch,.dinner,.supper{
	color: #999;
	background-color: #f8f8f8;
}
.edit{
	flex: 1;
  font-size:30;
	color:#53beb7;
	text-align: right
}
.row{
	background-color: #fff;
}
.col{
	flex: 1;
	text-align: center;
	font-size: 26rpx;
	line-height: 50rpx;
}

.goodsList{
	height: 270rpx;
}
.nodata{
	text-align: center;
	line-height: 270rpx;
	font-size: 28rpx;
}
